<!-- app/views/search/index.html.erb -->
<div class="container mx-auto">
  <!-- Display search results -->
  <% if @results.present? %>
    <h2 class="text-xl font-bold mt-4 mb-2">Search Results:</h2>
    <ul>
      <% @results.each do |result| %>
        <li>
          <%= link_to do %>
            <% if result.is_a?(Development) %>
              <%= render "developments/development_card", development: result, average: result.review_average %>
            <% elsif result.is_a?(User) %>
              <%= render "users/user_card", user: result %>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
