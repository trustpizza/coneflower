<div class="flex w-full h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-sm w-full bg-white p-8 rounded-lg shadow-lg">
    <h2 class="text-center text-2xl font-extrabold text-gray-900 mb-6">Register an Account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4 pb-2" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div class="relative z-0 w-full mb-5 group">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <!-- Username Field -->
      <div class="relative z-0 w-full mb-5 group">
        <%= f.label :username, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :username, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <!-- Password Field -->
      <div class="relative z-0 w-full mb-5 group">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-gray-500 mt-2">
            <em><%= @minimum_password_length %> characters minimum</em>
          </p>
        <% end %>
      </div>

      <!-- Password Confirmation Field -->
      <div class="relative z-0 w-full mb-5 group">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <!-- Submit Button -->
      <div class="actions">
        <%= f.submit "Sign up", class: "w-full text-white bg-indigo-600 hover:bg-indigo-700 focus:ring-4 focus:ring-indigo-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-indigo-600 dark:hover:bg-indigo-700 focus:outline-none dark:focus:ring-indigo-800" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
