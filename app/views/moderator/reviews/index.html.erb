<div class="mt-2 flex flex-col gap-2 items-center justify-center w-full">
  <%= link_to "Show this development", moderator_development_path(@development), class: "w-full md:w-auto rounded-lg py-3 px-5 bg-gray-100 text-gray-800 font-medium hover:bg-gray-200" %>
  <%= render "paginator" %>
  <% @reviews.each do |review| %>
    <%= render "review", review: review, review_average: @score_averages[review.id] %>
  <% end %>
</div>