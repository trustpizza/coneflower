<%= form_with url: moderator_search_index_path, method: :get, class: "relative mb-4 flex items-center" do |form| %>
  <%= form.text_field :query, value: @query, id: "search-navbar", class: "block w-full p-2 ps-10 text-sm text-gray-900 border border-gray-300 rounded-l-lg bg-gray-50 focus:ring-green-500 focus:border-green-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-green-500 dark:focus:border-green-500", placeholder: "Search..." %>
  
  <%= form.select :search_type, options_for_select([["Developments", "developments"], ["Users", "users"]], params[:search_type]), {}, class: "block p-2 text-sm text-gray-900 border border-gray-300 bg-gray-50 rounded-r-lg focus:ring-green-500 focus:border-green-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-green-500 dark:focus:border-green-500" %>

  <%= form.submit "Search", class: "sr-only" %>
<% end %>