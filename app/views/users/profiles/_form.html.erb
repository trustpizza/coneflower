<%= form_with(model: profile, class: "space-y-6", class: "m-4") do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-4 py-3 rounded-lg">
      <h2 class="font-semibold"><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul class="mt-2 list-disc list-inside">
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 p-4">
    <div class="space-y-2">
      <% if profile.profile_picture.attached? %>
          <%= image_tag profile.profile_picture, class: "rounded-t-lg" %>
      <% end %>
      <%= form.label :profile_picture, class: "block font-medium text-gray-700" %>
      <%= form.file_field :profile_picture, class: "block w-full text-gray-500" %>
    </div>
      <div class="p-5">
        <div class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
          <%= form.label :username, class: "block font-medium text-gray-700" %>
          <%= form.text_field :username, class: "block w-full shadow-sm rounded-md border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>
        <div class="mb-3 font-normal text-gray-700 dark:text-gray-400">
          <%= form.label :biography, class: "block font-medium text-gray-700" %>
          <%= form.text_area :biography, class: "block w-full shadow-sm rounded-md border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>
      </div>
      <div>
        <%= form.submit "Update", class: "inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" do %>
          <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
          </svg>
        <% end %>
      </div>
  </div>
<% end %>








