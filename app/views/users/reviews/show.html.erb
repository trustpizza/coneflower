<div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-lg">
    <!-- Review Section -->
    <div class="mb-6">
        <h2 class="text-2xl font-bold mb-2"><%= @review.title %></h2>
        <p class="text-gray-700 mb-4"><%= @review.description %></p>
        <div class="flex items-center">
            <span class="text-yellow-400 flex">
                <% @score_average.to_i.times do %>
                    <svg class="w-4 h-4 text-yellow-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                        <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                    </svg>
                <% end %>
                <% (5 - @score_average.to_i).times do %>
                    <svg class="w-4 h-4 text-gray-200 dark:text-gray-600" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                        <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"></path>
                    </svg>
                <% end %>
            </span>
            <span class="ml-2 text-gray-600"><%= @score_average %></span>
        </div>
    </div>

    <!-- Scores Section -->
    <div>
        <% @review.scores.each do |score| %>
            <%= render "scores/score", score: score %>
        <% end %>
    </div>
</div>